@page
@model AspNetCoreHtmxExample.RazorPages.Pages.Todo.Index

@{
    const string title = "Todo";
    ViewData["Title"] = title;
    Response.AddTitleOverrideHeader(title);
}

<div class="col col-6 col-md-8 col-sm-12">
    <div class="row">
        <div id="todo-list" hx-get="/fragments/todo/list" hx-trigger="load">
            
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form hx-post="/fragments/todo/list" hx-swap="innerHTML" hx-target="#todo-list">
                <div class="row py-2">
                    <label class="form-label h5">Todo</label>
                    <input name="name" id="name" class="form-control" />
                </div>
                <div class="row py-2">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>
</div>